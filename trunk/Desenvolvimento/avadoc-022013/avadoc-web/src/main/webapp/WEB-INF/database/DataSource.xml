<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- C3P0 configuration -->
	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close"
		p:jdbcUrl="jdbc:postgresql://localhost:5432/avadoc" p:user="postgres" p:password="postgres" p:driverClass="org.postgresql.Driver"
		p:minPoolSize="20" p:maxPoolSize="40" p:initialPoolSize="10" p:numHelperThreads="4" p:acquireIncrement="5"
		p:idleConnectionTestPeriod="240" p:maxIdleTimeExcessConnections="480" />
<!-- 	<bean id="dataSourceExploder" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close" -->
<!-- 		p:jdbcUrl="${jdbc.url}" p:user="${jdbc.user}" p:password="${jdbc.password}" p:driverClass="${jdbc.driver}" -->
<!-- 		p:minPoolSize="20" p:maxPoolSize="40" p:initialPoolSize="10" p:numHelperThreads="4" p:acquireIncrement="5" -->
<!-- 		p:idleConnectionTestPeriod="240" p:maxIdleTimeExcessConnections="480" /> -->

	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
		p:dataSource-ref="dataSource" />

</beans>