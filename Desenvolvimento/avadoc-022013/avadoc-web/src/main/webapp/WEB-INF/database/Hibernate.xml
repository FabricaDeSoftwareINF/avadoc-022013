<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- Hibernate session factory -->
	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>

		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
				<prop key="hibernate.connection.pool_size">1</prop>
				<prop key="hibernate.c3p0.min_size">50</prop>
				<prop key="hibernate.c3p0.max_size">80</prop>
				<prop key="hibernate.c3p0.timeout">223200</prop>
				<prop key="hibernate.c3p0.max_statements">500</prop>
				<prop key="hibernate.c3p0.idle_test_period">5000</prop>
				<prop key="hibernate.current_session_context_class">thread</prop>
			</props>
		</property>

		<property name="annotatedClasses">
			<list>
				<value>br.ufg.inf.avadoc.entity.Docente</value>
				<value>br.ufg.inf.avadoc.entity.Usuario</value>
				<value>br.ufg.inf.avadoc.entity.Nota</value>
				<value>br.ufg.inf.avadoc.entity.Produto</value>
				<value>br.ufg.inf.avadoc.entity.Producao</value>
				<value>br.ufg.inf.avadoc.entity.AtividadeEnsino</value>
				<value>br.ufg.inf.avadoc.entity.ProducaoIntelectual</value>
				<value>br.ufg.inf.avadoc.entity.AtividadePesquisaExtensao</value>
				<value>br.ufg.inf.avadoc.entity.AtividadeAdministrativaRepresentacao</value>
				<value>br.ufg.inf.avadoc.entity.AtividadeOutra</value>
				<value>br.ufg.inf.avadoc.entity.ExtratoAtividades</value>
			</list>
		</property>

	</bean>
</beans>